{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/robots.txt",
            "dest": "/public/robots.txt"
        },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      },
      {
        "src": "/ads.txt",
        "dest": "/public/ads.txt"
      },
      {
        "src": "/sitemap.xml",
        "dest": "/public/sitemap.xml"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ]
  }